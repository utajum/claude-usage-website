<!-- Usage: animated terminal cards showing install commands for each platform -->
<section class="section">
  <div class="container">
    <h2>Installation</h2>
    <p class="section-desc">One command to install. The app will auto-start and appear in your system tray. Hover to see your token usage.</p>

    <div class="usage-grid">
      <div class="usage-card">
        <div class="usage-desc">
          <h3>Linux</h3>
          <p>One-liner installer for Linux x64 and ARM64. Requires curl.</p>
        </div>
        <div class="usage-terminal" data-command="curl -sL https://raw.githubusercontent.com/utajum/" data-comment2="claude-usage/master/scripts/install-linux.sh | bash">
          <div class="ut-bar"><span class="ut-dots"><i></i><i></i><i></i></span></div>
          <div class="ut-body"><code><span class="prompt">$ </span><span class="typed-cmd"></span><span class="typed-comment"></span><span class="ut-cursor">_</span></code></div>
        </div>
      </div>

      <div class="usage-card">
        <div class="usage-desc">
          <h3>macOS</h3>
          <p>Download the DMG or binary. Drag to Applications folder.</p>
        </div>
        <div class="usage-terminal" data-command="# Download from GitHub releases" data-comment="# Or build from source">
          <div class="ut-bar"><span class="ut-dots"><i></i><i></i><i></i></span></div>
          <div class="ut-body"><code><span class="prompt">$ </span><span class="typed-cmd"></span><span class="typed-comment"></span><span class="ut-cursor">_</span></code></div>
        </div>
      </div>

      <div class="usage-card">
        <div class="usage-desc">
          <h3>Windows</h3>
          <p>PowerShell installer script for Windows x64.</p>
        </div>
        <div class="usage-terminal" data-command="# Download .ps1 from GitHub" data-comment="# Or run install-windows.ps1">
          <div class="ut-bar"><span class="ut-dots"><i></i><i></i><i></i></span></div>
          <div class="ut-body"><code><span class="prompt">> </span><span class="typed-cmd"></span><span class="typed-comment"></span><span class="ut-cursor">_</span></code></div>
        </div>
      </div>

      <div class="usage-card">
        <div class="usage-desc">
          <h3>Build from source</h3>
          <p>Requires Go 1.24+. Clone and build locally.</p>
        </div>
        <div class="usage-terminal" data-command="make build" data-comment="# Build for current platform">
          <div class="ut-bar"><span class="ut-dots"><i></i><i></i><i></i></span></div>
          <div class="ut-body"><code><span class="prompt">$ </span><span class="typed-cmd"></span><span class="typed-comment"></span><span class="ut-cursor">_</span></code></div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Usage terminal typing animations
  function typeCommand(el: HTMLElement, command: string, comment: string) {
    const cmdSpan = el.querySelector('.typed-cmd') as HTMLElement;
    const commentSpan = el.querySelector('.typed-comment') as HTMLElement;
    const cursorSpan = el.querySelector('.ut-cursor') as HTMLElement;
    if (!cmdSpan || !cursorSpan) return;

    let i = 0;
    let j = 0;
    cursorSpan.classList.remove('blink');

    function typeComment() {
      if (!comment || !commentSpan) {
        cursorSpan.classList.add('blink');
        return;
      }
      if (j < comment.length) {
        commentSpan.textContent = comment.slice(0, j + 1);
        j++;
        setTimeout(typeComment, 25 + Math.random() * 20);
      } else {
        cursorSpan.classList.add('blink');
      }
    }

    function tick() {
      if (i < command.length) {
        cmdSpan.textContent = command.slice(0, i + 1);
        i++;
        setTimeout(tick, 35 + Math.random() * 40);
      } else {
        if (comment) {
          cmdSpan.textContent = command + '  ';
          setTimeout(typeComment, 300);
        } else {
          cursorSpan.classList.add('blink');
        }
      }
    }
    tick();
  }

  const usageTerminals = document.querySelectorAll('.usage-terminal');
  const usageObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        usageObserver.unobserve(entry.target);
        const el = entry.target as HTMLElement;
        const command = el.dataset.command || '';
        const comment = el.dataset.comment || '';
        const allTerminals = Array.from(usageTerminals);
        const idx = allTerminals.indexOf(el);
        setTimeout(() => {
          typeCommand(el, command, comment);
        }, idx * 150);
      }
    });
  }, { threshold: 0.3 });

  usageTerminals.forEach((t) => usageObserver.observe(t));
</script>

